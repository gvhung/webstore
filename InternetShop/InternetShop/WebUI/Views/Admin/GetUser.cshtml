@model WebUI.Models.ForActivation.UserProfile

@{
    ViewBag.Title = "Пользователь: " + @Model.UserName;
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h1>Информация о вывбранном пользователе</h1>

<table class="grid">
    <tr>
        <th>ID</th>
        <th>Логин</th>
        <th>Имя</th>
        <th>Фамилия</th>
        <th>Email</th>
        <th>Телефон</th>
        <th>Адрес</th>
    </tr>
        <tr>
            <td>@Model.UserId</td>
            <td>@Model.UserName</td>
            <td>@Model.FirstName</td>
            <td>@Model.LastName</td>
            <td>@Model.Email</td>
            <td>@Model.Phone</td>
            <td>@Model.Address</td>
        </tr>
</table>